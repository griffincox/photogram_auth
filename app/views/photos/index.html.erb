<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <% @photos.each do |photo| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/users/<%= photo.user_id %>"><%= photo.caption %></a>
            <small>
              Added about <%= time_ago_in_words(photo.updated_at) %> ago
            </small>
          </h3>
        </div>
        <div class="panel-body">
          <a href="/users/<%= photo.user_id %>">
            <img src="<%= photo.image %>" alt="" class="img-responsive">
          </a>
          <p>
            <%= photo.caption %>
          </p>
          <% if current_user.id == photo.user_id %>
          <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
            Edit
          </a>
          <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">
            Delete
          </a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
